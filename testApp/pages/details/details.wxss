.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.full-screen{
  position: fixed;
  bottom: 0;
  top: 0;
  right: 0;
  left: 0;
  background: rgba(8, 8, 8, 0.5);
  display: none;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.camera-content{
  width: 100%;
}
.camera{
  margin: auto;
  width: 210rpx;
  height: 210rpx;
  background: #eeeeee;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}
.camera image{
  width:95rpx;
  height: 91rpx;
}
.userinfo-nickname {
  color: #aaa;
}

.personals{
  padding: 10rpx;
  width: 100%;
  height: 100%
}
.desigansition{
  display: flex; 
  height: 84rpx;
  width: 100%;
}
.desigansition text{
  width: 150rpx;
}
.label{
  width: 91rpx;
  height: 49rpx;
  background: white;
  border: 1px solid #ffc64a; 
  display: inline-block;
  margin-right: 56rpx;
  border-radius: 10rpx;
  margin-top: 42rpx;
  margin-bottom: 22rpx;
  text-align: center;
  line-height: 49rpx;
  font-size: 22rpx;
  color: #ffc64a;
}
.main{
  width: 70%;
  margin:21rpx auto;
}
.main view text{
   max-width: 400rpx;
}
.birthday{
  color: black !important;
  height: 84rpx;
  line-height: 84rpx;
  margin-top: 50rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.birthday picker{
   float: right;
   margin-right: 50rpx;
}
.sex{
  height: 84rpx;
  line-height: 50px;
  display: flex;
  align-items: flex-end;
  border-bottom: 1px solid #eee;
}
.tui-picker-detail{
  position: absolute;
  top: 0rpx;
  right: 45rpx;
}
.footers{
  padding: 15rpx;
  text-align: center;
  background: transparent;
  color: white;
  border-radius: 40rpx;
  margin:420rpx 200rpx 0 150rpx;
}
.footers button{
  display: inline-block;
  color: white !important;
  border-radius: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  /* background: orange; */
}
button::after{
  border: none;
}