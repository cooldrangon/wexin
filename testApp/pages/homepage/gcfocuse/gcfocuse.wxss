/* 分类弹出模态框样式 */
.classfiy{
  position: fixed;
  width: 380rpx;
  background: white;
  bottom: 400rpx;
  left: 190rpx;
  border-radius: 41rpx;
  z-index: -5;
  display: none;
  font-size: 25rpx;
}
.classfiy-header{
  border-top-right-radius: 39rpx;
  border-top-left-radius: 39rpx;
  width: 100%;
  height: 91rpx;
  text-align: center;
  line-height: 91rpx;
  border-bottom: 1px solid #eeeeee;
}
.classfiy-footer{
  border-bottom-right-radius: 39rpx;
  border-bottom-left-radius: 39rpx;
  width: 100%;
  height: 91rpx;
  display: flex;
  justify-content: space-between;
}

.classfiy-footer text{
  width: 50%;
  text-align: center;
  line-height: 80rpx;
}
.classfiy-footer text:first-child{
  border-right:1px solid #eeeeee;
}
.classfiy .noterecord text{
  display: inline-block;
  height: 70rpx;
  width: 100%;
  text-align: center;
  line-height: 70rpx;
  border-bottom: 1px solid #eeeeee;
}
.full-screen{
  position: fixed;
  bottom: 0;
  top: 0;
  right: 0;
  left: 0;
  background: rgba(8, 8, 8, 0.5);
  display: none;
}


/* 评论输入框 */
.release{
display: flex;
align-items: flex-end; /*底部对齐*/
justify-content: space-between; /*两端对齐*/
box-sizing: border-box;
position: fixed;
left: 0;
bottom: 0;
width: 100%;
padding: 18rpx 0 18rpx 30rpx;
background-color: #F7F8F7;
font-size: 28rpx;
z-index: 999;
}
.release .text{
width: 604rpx;
min-height: 34rpx;
max-height: 102rpx; /*最多显示三行*/
border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
border-style: solid;
border-color: #ffffff;
line-height: 34rpx;
font-size: 28rpx;
background-color: #ffffff;
border-radius: 25rpx;
}
.release .submit{
width: 116rpx;
height: 64rpx;
line-height: 64rpx;
text-align: center;
color: #66CC00;
}


