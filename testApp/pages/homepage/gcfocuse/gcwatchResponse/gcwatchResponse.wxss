
.allResponse{
   margin-bottom: 180rpx;
}
.history{
  /* border-bottom:1rpx solid #eee; */
  padding:0 20rpx;
  margin-bottom: 70rpx;
  position: relative;
}
.history .xiaotu{
  width:80rpx;
  height:80rpx;
  border-radius: 100%;
}
.history .na{
  color:#d2d2d2;
  font-size: 35rpx;
  position: absolute;
  top:2%;
  left:20%;
}
.history .reason{
  padding-left: 18%;
  margin:30rpx 0;
  white-space: wrap; 
  font-size: 30rpx;
  overflow: hidden;
}
.history .time{
  padding-left: 18%;
  font-size: 30rpx;
}
.history .time .timea{
  color:#d1d1d1;
}
.history .time image{
  width:30rpx;
  height:30rpx;
}
.history .time .response{
  margin-left: 15%;
}
.more{
  width:80%;
  background-color: #eeeeee;
  border-radius: 15rpx;
  margin:40rpx 0 60rpx 130rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.more text{
  font-size: 30rpx;
}
.more view{
  font-size: 30rpx;
  color:#d7d7d7;
  margin-top: 20rpx;
}

/* 发送内容 */
.send{
  width:100%;
  height:100rpx;
  background-color: #fff;
  position: fixed;
  bottom:0;
  /* padding:0 20rpx; */
}
.sendContent{
  /* width:100%; */
  height:65rpx;
  background-color: #eeeeee;
  padding:10rpx 30rpx;
}
.sendContent input{
  width:80%;
  height:100%;
  background-color: #fff;
  border-radius: 40rpx;
  float:left;
  padding-left:20rpx;
}
.sendContent .anniu{
  width:12%;
  height:100%;
  border:1rpx solid #fec749;
  color:#fec749;
  border-radius: 15rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  float:right;
  text-align: center;
}