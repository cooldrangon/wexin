  text-align: center;
  font-size: 30rpx;
}
.aboutbj{
  padding:40rpx 20rpx;
  background-color: #fff;
}
.aboutbj .bj{
  border-left: 5rpx solid #fdc848;
  font-size: 25rpx;
}
.about{
  /* margin-top: 50rpx; */
  display: flex;
  justify-content: center;
}
.about .content{
  width:50%;
  height:600rpx;
  /* background-color:pink; */
  margin: 40rpx 15rpx 40rpx 15rpx;
  border:1rpx solid #ebebeb;
  box-shadow: 2rpx 2rpx 5rpx #e0e0e0;
}
.about .content .bg{
  width:100%;
  height:62%;
  /* 去除图片下方的间隙 */
  display:block;
}
.about .content .info{
  padding:20rpx 20rpx;

}
.about .content .message{
  font-size: 25rpx;
}
.grinfo{
  margin-top: 20rpx;
}
.grinfo .name{
  margin-right: 20%;

}
.grinfo .pic{
  width:60rpx;
  height:60rpx;
