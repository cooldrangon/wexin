}
.history .time{
  padding-left: 90rpx;
}
.history .time image{
  width:30rpx;
  height:30rpx;
}
.history .time .response{
  margin-left: 40%;

}
.more{
  width:80%;
  background-color: #eeeeee;
  border-radius: 15rpx;
  margin:60rpx 0 60rpx 90rpx;
  padding: 40rpx;
  box-sizing: border-box;
}
.more text{
  font-size: 30rpx;

}
.more view{
  font-size: 30rpx;
