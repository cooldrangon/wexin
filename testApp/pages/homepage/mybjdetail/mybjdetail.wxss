/* 笔记详情 */
.tabj{
  background-color: #eee;
  padding-bottom: 100rpx;
  position: relative
}
.childer .datu{
  width:100%;
  height:800rpx;
  display:block;
}
.childer .list{
  position: absolute;
  right:20rpx;
  top:20rpx;
  width:60rpx;
  height:60rpx;
}
.caozuo{
  width:30%;
  /* height:200rpx; */
  padding:15rpx 0;
  background-color: #fff;
  border-radius: 30rpx;
  position: absolute;
  top:20rpx;
  right:100rpx;
