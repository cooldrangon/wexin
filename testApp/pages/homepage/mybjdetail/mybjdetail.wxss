}
.ta{
  padding:20rpx;
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.ta .name{
  position: absolute;
  top:40rpx;
  left:200rpx;
}
.ta .focus {
  position: absolute;
  top:40rpx;
  left:600rpx;
  border: 1px solid orange;
  color: orange;
  border-radius: 10rpx;
  font-size: 24rpx !important;
  padding:6rpx 15rpx;
  margin-top: 10rpx
}
.ta .pic{
  width:120rpx;
  height:120rpx;
  border-radius: 100%; 

}
.ta .describe{
  font-size: 30rpx;
  margin-top: 30rpx;
  white-space: wrap; 
  overflow: hidden;
}
.location,
.time,
.comment{
  font-size: 30rpx;
  color:#d2d2d2;
  position: relative
}
.location,
.comment,
.motivate{
  margin: 20rpx 0;
}
  
.location image{
  width:40rpx;
  height:40rpx;
  margin-right: 30rpx;
}
.time .fre{
  margin-left: 40%;
}

.comment::after{
  width:1rpx;
  height:2rpx;
  background-color: #ffc64b;
}
.comment .cbj{
  color:#000;
  border-left: 6rpx solid #ffc64b;
  padding-left: 10rpx;
  margin-right: 58%;
}
.motivate {
  padding-right: 50rpx;
}
.xiaotu,
.motivate image{
  width:80rpx;
  height:80rpx;
  border-radius: 100%;
}
.motivate input{
  width: 80%;
  float:right;
  font-size: 30rpx;
  color:#d2d2d2;
  border-radius: 40rpx;
  padding: 10rpx;
  background: #e0e6ec;
  padding-left:30rpx;
}
.phcolor{
   color:#d2d2d2;
}
.history{
  border-bottom:1rpx solid #eee;
  position: relative
}
.history .na{
  color:#d2d2d2;
  font-size: 35rpx;
  position: absolute;
  /* top:5%; */
  top:2%;
  left:13%;

}
.history .reason{
  padding-left: 90rpx;
  margin:30rpx 0;
  white-space: wrap; 
  font-size: 30rpx;
