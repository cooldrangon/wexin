}
.control text{
  margin-left: -110rpx;
}



/* 分类弹出模态框样式 */
.classfiy{
  position: fixed;
  width: 380rpx;
  background: white;
  bottom: 400rpx;
  left: 190rpx;
  border-radius: 41rpx;
  z-index: -5;
  display: none;
  font-size: 25rpx;
}
.classfiy-header{
  border-top-right-radius: 39rpx;
  border-top-left-radius: 39rpx;
  width: 100%;
  height: 91rpx;
  text-align: center;
  line-height: 91rpx;
  border-bottom: 1px solid #eeeeee;
}
.classfiy-footer{
  border-bottom-right-radius: 39rpx;
  border-bottom-left-radius: 39rpx;
  width: 100%;
  height: 91rpx;
  display: flex;
  justify-content: space-between;
}

.classfiy-footer text{
  width: 50%;
  text-align: center;
  line-height: 80rpx;
}
.classfiy-footer text:first-child{
  border-right:1px solid #eeeeee;
}
.classfiy .noterecord text{
  display: inline-block;
  height: 70rpx;
  width: 100%;
  text-align: center;
  line-height: 70rpx;
  border-bottom: 1px solid #eeeeee;
}
.full-screen{
  position: fixed;
  bottom: 0;
  top: 0;
  right: 0;
  left: 0;
  background: rgba(8, 8, 8, 0.5);
  display: none;
}
