.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.personals{
  padding: 10rpx;
  width: 100%;
  height: 100%
}
.toptitle{
  text-align: center;
  width: 100%;
  margin-top:10%;
  margin-bottom: 20rpx;
}
.logo{
  text-align: center;
  width: 200rpx;
  height: 200rpx;
  margin:50rpx auto;
  border-radius: 100%;
  overflow: hidden;
  border: 2px solid red
}
.logo .logoimg{
  border-radius: 100%;
  width: 100%;
  height: 100%
}
.next{
  float: right;
  font-size: 40rpx;
  color: #ccc;
  margin-right: 26rpx;
}
.main{
  width: 70%;
  margin:auto;
  overflow: hidden
}
.birthday{
  color: black !important;
  height: 84rpx;
  line-height: 84rpx;
  margin-top: 50rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.birthday picker{
   float: right;
   margin-right: 50rpx
}
.sex{
  height: 84rpx;
  line-height: 84rpx;
  border-bottom: 1px solid #eee;
}
.sex,.birthday text{
  color:#ccc !important;
}

 .sex text{
  color: black !important;
} 
